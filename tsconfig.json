{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "target": "es5",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["es2015"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
